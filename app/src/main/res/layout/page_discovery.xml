<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhiteBackgournd"
    android:orientation="vertical">

    <include
        layout="@layout/status_bar"
        />

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_weight="0"
        android:background="@color/colorAccent5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/menu_icon"
            style="@style/myImageButtonStyle"
            android:layout_width="@dimen/iconSize"
            android:layout_height="@dimen/iconSize"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:layout_weight="0"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_menu" />

        <TextView
            android:id="@+id/discovery_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="false"
            android:layout_gravity="center_vertical"
            android:layout_toEndOf="@+id/navigation_icon"
            android:layout_weight="1"
            android:text="发现"
            android:textColor="@color/textWhite"
            android:textSize="@dimen/textSubhead" />

        <ImageButton
            android:id="@+id/toolbar_more"
            style="@style/myImageButtonStyle"
            android:layout_width="@dimen/iconSize"
            android:layout_height="@dimen/iconSize"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_menu_white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/colorAccent5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/discovery_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="false"
            android:layout_centerInParent="false"
            android:layout_centerVertical="false"
            android:layout_gravity="center"
            android:textAppearance="@style/LightLabelTextAppearance"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="今天正在进行的比赛：0个"
            android:textAppearance="@style/LightContentTextAppearance" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/textWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/textWhite"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/match_info_short_info"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:layout_weight="0"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/discovery_match"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="0dp"
                        android:layout_row="0"
                        android:layout_rowSpan="2"
                        android:layout_weight="0"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        app:srcCompat="@drawable/ic_match2_blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_columnSpan="1"
                        android:layout_gravity="center"
                        android:layout_row="1"
                        android:layout_rowSpan="1"
                        android:layout_weight="0"
                        android:gravity="center_vertical"
                        android:text="订阅的比赛"
                        android:textAppearance="@style/DarkBody1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/discovery_team"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="0dp"
                        android:layout_row="0"
                        android:layout_rowSpan="2"
                        android:layout_weight="0"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        app:srcCompat="@drawable/ic_people2_blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_columnSpan="1"
                        android:layout_gravity="center"
                        android:layout_row="1"
                        android:layout_rowSpan="1"
                        android:layout_weight="0"
                        android:gravity="center_vertical"
                        android:text="加入的小队"
                        android:textAppearance="@style/DarkBody1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/discovery_labels"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="0dp"
                        android:layout_row="0"
                        android:layout_rowSpan="2"
                        android:layout_weight="0"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp"
                        app:srcCompat="@drawable/ic_label_blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:layout_columnSpan="1"
                        android:layout_gravity="center"
                        android:layout_row="1"
                        android:layout_rowSpan="1"
                        android:layout_weight="0"
                        android:gravity="center_vertical"
                        android:text="订阅的标签"
                        android:textAppearance="@style/DarkBody1" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:alpha="0.5"
                android:background="@color/colorGray"
                android:visibility="invisible">

            </View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="@color/colorAccent5">

                </View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0"
                    android:text="竞赛推荐"
                    android:textAppearance="@style/DarkSubhead"
                    android:textColor="@color/colorAccent5" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/ic_enter_gray" />
            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="horizontal"
                android:paddingTop="8dp"
                android:rowCount="2">

                <LinearLayout
                    android:id="@+id/match_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_columnSpan="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="16dp"
                    android:layout_rowSpan="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/match_pic"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/bg_baidustar" />

                    <TextView
                        android:id="@+id/match_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="4dp"
                        android:text="TextView"
                        android:textAppearance="@style/DarkBody1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/match_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_columnSpan="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="0dp"
                    android:layout_rowSpan="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/match_pic"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/bg_baidustar" />

                    <TextView
                        android:id="@+id/match_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="4dp"
                        android:text="TextView"
                        android:textAppearance="@style/DarkBody1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/match_3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_columnSpan="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="16dp"
                    android:layout_rowSpan="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/match_pic"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/bg_baidustar" />

                    <TextView
                        android:id="@+id/match_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="4dp"
                        android:text="TextView"
                        android:textAppearance="@style/DarkBody1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/match_4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_columnSpan="1"
                    android:layout_columnWeight="1"
                    android:layout_marginLeft="0dp"
                    android:layout_rowSpan="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/match_pic"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/bg_baidustar" />

                    <TextView
                        android:id="@+id/match_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="4dp"
                        android:text="TextView"
                        android:textAppearance="@style/DarkBody1" />
                </LinearLayout>

            </GridLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="@color/colorAccent5">

                </View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0"
                    android:text="社区精选"
                    android:textAppearance="@style/DarkSubhead"
                    android:textColor="@color/colorAccent5" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/ic_enter_gray" />

            </LinearLayout>

            <WebView
                android:id="@+id/community_web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_weight="0" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_weight="1.52"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="@color/colorAccent5">

                </View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0"
                    android:text="优秀成员"
                    android:textAppearance="@style/DarkSubhead"
                    android:textColor="@color/colorAccent5" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/ic_enter_gray" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:layout_weight="1.52"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:background="@color/colorAccent5">

                </View>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="0"
                    android:text="优秀成员"
                    android:textAppearance="@style/DarkSubhead"
                    android:textColor="@color/colorAccent5" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/ic_enter_gray" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>