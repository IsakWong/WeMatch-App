<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorAccent5"
            app:cardElevation="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:id="@+id/info_avatar_bg"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/overlay"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:alpha="0.4"
                    android:background="@color/textDarkerGray" />

                <ImageView
                    android:id="@+id/sex"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_below="@+id/info_avatar"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/user" />

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/info_avatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_label" />

                <TextView
                    android:id="@+id/user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/info_avatar"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:textAppearance="@style/LightTitleTextAppearance" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/status_bar"
                        layout="@layout/transparent_status_bar" />

                    <ImageButton
                        android:id="@+id/navigation_icon"
                        style="@style/myImageButtonStyle"
                        android:layout_width="@dimen/iconSize"
                        android:layout_height="@dimen/iconSize"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0"
                        android:background="@color/colorTransparent"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/ic_back" />

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="16dp"
                            android:layout_weight="0"
                            android:orientation="horizontal"
                            android:paddingTop="8dp">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_gravity="center"
                                android:layout_weight="0"
                                android:paddingBottom="32dp"
                                android:paddingTop="0dp"
                                app:srcCompat="@drawable/ic_qq_gray" />

                            <TextView
                                android:id="@+id/qq"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_columnSpan="1"
                                android:layout_gravity="top"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_row="1"
                                android:layout_rowSpan="1"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:textAlignment="viewStart"
                                android:textAppearance="@style/DarkBody1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="0"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_gravity="center"
                                android:layout_weight="0"
                                android:paddingBottom="32dp"
                                android:paddingTop="0dp"
                                app:srcCompat="@drawable/ic_loc_gray" />

                            <TextView
                                android:id="@+id/university"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_columnSpan="1"
                                android:layout_gravity="top"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_row="1"
                                android:layout_rowSpan="1"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:textAppearance="@style/DarkBody1" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="0"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_gravity="center"
                                android:layout_weight="0"
                                android:paddingBottom="32dp"
                                android:paddingTop="0dp"
                                app:srcCompat="@drawable/ic_major_gray" />

                            <TextView
                                android:id="@+id/major"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_column="1"
                                android:layout_columnSpan="1"
                                android:layout_gravity="top"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_row="1"
                                android:layout_rowSpan="1"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:textAppearance="@style/DarkBody1" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="0"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_gravity="top"
                                android:paddingBottom="32dp"
                                app:srcCompat="@drawable/ic_short_info_gray" />

                            <TextView
                                android:id="@+id/short_info"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="top"
                                android:layout_marginLeft="16dp"
                                android:layout_marginRight="16dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:textAppearance="@style/DarkBody1" />
                        </LinearLayout>



                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</FrameLayout>