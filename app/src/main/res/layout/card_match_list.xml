<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/match_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginTop="6dp"
    android:orientation="vertical"
    android:transitionName="share_match_card"
    app:cardBackgroundColor="@color/textWhite"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/match_card_pic"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/bg_dlut" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/match_card_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/match_card_pic"
            android:layout_alignTop="@+id/match_card_title"
            android:layout_marginTop="-8dp"
            android:layout_weight="0"
            android:alpha="0.5"
            android:scaleType="centerCrop"
            app:srcCompat="@android:color/background_dark" />

        <TextView
            android:id="@+id/match_card_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/match_card_pic"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="6dp"
            android:text="大连理工大学攀登杯"
            android:textAppearance="@style/LightTitleTextAppearance" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@+id/match_card_pic"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/match_card_short_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="6dp"
                    android:elevation="1dp"
                    android:text="sdasdasdasdasdasdsdasdasdasdasdasdsdasdasdasdasdasdsdasdasdasdasdasd"
                    android:textAppearance="@style/DarkBody1" />

                <TextView
                    android:id="@+id/match_card_label1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/match_card_short_info"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="16dp"
                    android:layout_toEndOf="@+id/_label"
                    android:layout_weight="1"
                    android:text="科创"
                    android:textAppearance="@style/DarkCaption"
                    android:textColor="@color/textGray" />

                <TextView
                    android:id="@+id/match_card_label2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_below="@+id/match_card_short_info"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="16dp"
                    android:layout_toEndOf="@+id/match_card_label1"
                    android:layout_weight="1"
                    android:text="编程"
                    android:textAppearance="@style/DarkCaption"
                    android:textColor="@color/textGray" />

                <TextView
                    android:id="@+id/match_card_label3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_below="@+id/match_card_short_info"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="16dp"
                    android:layout_toEndOf="@+id/match_card_label2"
                    android:layout_weight="1"
                    android:text="合作"
                    android:textAppearance="@style/DarkCaption"
                    android:textColor="@color/textGray" />

                <TextView
                    android:id="@+id/_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_below="@+id/match_card_short_info"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="16dp"
                    android:text="标签:"
                    android:textAppearance="@style/DarkBody1" />
            </RelativeLayout>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/match_card_like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"
                android:layout_alignWithParentIfMissing="false"
                android:layout_centerVertical="false"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/ic_like_gray" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>